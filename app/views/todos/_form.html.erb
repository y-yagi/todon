
<div class="logreg">
  <div class="row">
    <div class="col-md-12">
      <div class="logreg-page">
      <h3>編集</h3>
      <hr>
      <div class="form">
      <%= form_for(@todo, html: {class: 'form-horizontal'}) do |f| %>
        <% if @todo.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@todo.errors.count, "error") %> 入力エラーがあります:</h2>
            <ul>
            <% @todo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :detail, class: "control-label col-md-3" %>
          <div class="col-md-9">
            <%= f.text_field :detail %>
          </div>
        </div>

        <% if @tags.present? %>
          <div class="form-group">
            <%= f.label :tag_id, class: "control-label col-md-3" %>
            <div class="col-md-9">
              <%= f.select(:tag_id, @tags.map{|t| [t.name,  t.id] }, prompt: '--') %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :priority, class: "control-label col-md-3" %>
          <div class="col-md-9">
            <%= f.select(:priority, Todo::PRIORITIES.invert, prompt: '--') %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :end_date, class: "control-label col-md-3" %>
          <div class="col-md-9">
            <%= f.date_select :end_date %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 col-md-offset-3">
            <%= f.submit(class: 'btn btn-default') %>
          </div>
        </div>
    <% end %>
</div></div></div></div>
